<Window x:Class="QLTL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập hệ thống" Height="400" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F0F2F5">
    <Grid>
        <Border Background="White" CornerRadius="10" Margin="50" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Color="#DDD" ShadowDepth="1"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="QUẢN LÝ THỦY LỢI" FontSize="22" FontWeight="Bold" 
                           Foreground="#0078D7" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Tên đăng nhập" Foreground="Gray" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUser" Height="35" Padding="5" FontSize="14" Margin="0,0,0,15"/>

                <TextBlock Text="Mật khẩu" Foreground="Gray" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPass" Height="35" Padding="5" FontSize="14" Margin="0,0,0,20"/>

                <Button Content="ĐĂNG NHẬP" Height="40" Background="#0078D7" Foreground="White"
                        FontWeight="Bold" Click="BtnLogin_Click" Cursor="Hand"/>
                
                <TextBlock x:Name="lblError" Foreground="Red" Margin="0,10,0,0" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>