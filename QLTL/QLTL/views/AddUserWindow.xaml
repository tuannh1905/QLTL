<Window x:Class="QLTL.views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm người dùng mới" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="THÊM TÀI KHOẢN" FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#2980B9" Margin="0,0,0,20"/>

            <TextBlock Text="Tên đăng nhập:"/>
            <TextBox x:Name="txtUser" Height="30" Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Họ và Tên:"/>
            <TextBox x:Name="txtHoTen" Height="30" Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" Height="30" Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Chức vụ:"/>
            <ComboBox x:Name="cbRole" Height="30" Margin="0,5,0,20">
                <ComboBoxItem Content="Quản trị viên (Admin)" IsSelected="True"/>
                <ComboBoxItem Content="Cán bộ kỹ thuật"/>
                <ComboBoxItem Content="Nhân viên"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSave" Content="Lưu lại" Width="100" Height="35" 
                        Background="#27AE60" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"
                        Click="BtnSave_Click"/>
                <Button Content="Hủy bỏ" Width="80" Height="35" Click="BtnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>