<Window x:Class="QLTL.views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm người dùng mới" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="THÊM TÀI KHOẢN MỚI" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#2980B9"/>

            <TextBlock Text="Tên đăng nhập:"/>
            <TextBox x:Name="txtUser" Height="30" Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Mật khẩu:"/>
            <PasswordBox x:Name="txtPass" Height="30" Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Họ và Tên:"/>
            <TextBox x:Name="txtName" Height="30" Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" Height="30" Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Chức vụ:"/>
            <ComboBox x:Name="cbRole" Height="30" Margin="0,5,0,20" SelectedIndex="0">
                <ComboBoxItem Content="Nhân viên"/>
                <ComboBoxItem Content="Quản lý chung"/>
                <ComboBoxItem Content="Kỹ thuật viên"/>
                <ComboBoxItem Content="Vận hành trạm bơm"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Hủy bỏ" Width="80" Height="35" Margin="0,0,10,0" Click="BtnCancel_Click"/>
                <Button Content="Lưu lại" Width="80" Height="35" Background="#27AE60" Foreground="White" FontWeight="Bold" Click="BtnSave_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>