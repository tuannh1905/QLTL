<Page x:Class="QLTL.views.IrrigationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quản lý Diện tích tưới" Loaded="Page_Loaded">
    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="THỐNG KÊ DIỆN TÍCH TƯỚI (THEO XÃ)" FontSize="24" FontWeight="Bold" 
                   Foreground="#16A085" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <DataGrid x:Name="dtgIrrigation" Grid.Row="1" 
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                  RowHeight="35" FontSize="14" GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                <DataGridTextColumn Header="Xã / Phường" Binding="{Binding TenXa}" Width="200" FontWeight="Bold"/>
                <DataGridTextColumn Header="Vụ Mùa" Binding="{Binding VuMua}" Width="150"/>
                <DataGridTextColumn Header="Loại Cây" Binding="{Binding TenLoaiCay}" Width="200"/>
                <DataGridTextColumn Header="Diện tích (ha)" Binding="{Binding DienTichHienThi}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>