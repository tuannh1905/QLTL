<Page x:Class="QLTL.views.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Thống kê Báo cáo" Loaded="Page_Loaded">
    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="THỐNG KÊ BÁO CÁO CÔNG TRÌNH" FontSize="24" FontWeight="Bold" 
                   Foreground="#E67E22" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <DataGrid x:Name="dtgReport" Grid.Row="1" 
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                  RowHeight="40" FontSize="14" GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                <DataGridTextColumn Header="Tiêu đề Báo cáo" Binding="{Binding TieuDe}" Width="350" FontWeight="Bold"/>
                <DataGridTextColumn Header="Loại CT" Binding="{Binding LoaiCongTrinh}" Width="150"/>
                <DataGridTextColumn Header="Ngày tạo" Binding="{Binding NgayTaoHienThi}" Width="120"/>

                <DataGridTemplateColumn Header="Tệp đính kèm" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FileDinhKem}" FontStyle="Italic" Foreground="Blue" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>