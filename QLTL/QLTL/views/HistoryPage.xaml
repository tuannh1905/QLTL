<Page x:Class="QLTL.views.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Lịch sử truy cập" Loaded="Page_Loaded">
    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="NHẬT KÝ HOẠT ĐỘNG HỆ THỐNG" FontSize="24" FontWeight="Bold" 
                   Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <DataGrid x:Name="dtgHistory" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  IsReadOnly="True" 
                  RowHeight="30" FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                <DataGridTextColumn Header="Thời gian" Binding="{Binding ThoiGianHienThi}" Width="180"/>
                <DataGridTextColumn Header="Tài khoản" Binding="{Binding TenDangNhap}" Width="150" FontWeight="Bold"/>
                <DataGridTextColumn Header="Hành động" Binding="{Binding HanhDong}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>