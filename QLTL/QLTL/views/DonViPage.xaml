<Page x:Class="QLTL.views.DonViPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quản lý Đơn vị hành chính" 
      Loaded="Page_Loaded">

    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblTitle" 
                   Text="DANH SÁCH ĐƠN VỊ HÀNH CHÍNH" 
                   FontSize="24" FontWeight="Bold" Foreground="#2980B9" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="+ Thêm mới" Width="100" Height="30" Background="#27AE60" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>

            <TextBox x:Name="txtSearch" Width="200" Height="30" Margin="10,0,0,0" Padding="5" VerticalContentAlignment="Center"/>
            <Button Content="Tìm kiếm" Width="80" Height="30" Margin="5,0,0,0"/>
        </StackPanel>

        <DataGrid x:Name="dtgDonVi" Grid.Row="2" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  IsReadOnly="True" 
                  RowHeight="35" FontSize="14"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                <DataGridTextColumn Header="Mã Đơn vị" Binding="{Binding MaDonVi}" Width="100"/>
                <DataGridTextColumn Header="Tên Đơn vị" Binding="{Binding TenDonVi}" Width="250" FontWeight="Bold"/>
                <DataGridTextColumn Header="Trực thuộc (Cấp trên)" Binding="{Binding CapTren}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>