<Page x:Class="QLTL.views.PlanningPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quy hoạch và Bản đồ" Loaded="Page_Loaded">
    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="DANH SÁCH CÁC KỲ QUY HOẠCH" FontSize="24" FontWeight="Bold" 
                   Foreground="#2980B9" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <DataGrid x:Name="dtgPlanning" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  IsReadOnly="True" 
                  RowHeight="40" FontSize="14" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding KyID}" Width="50"/>
                <DataGridTextColumn Header="Tên Kỳ Quy Hoạch" Binding="{Binding TenKy}" Width="400" FontWeight="Bold"/>
                <DataGridTextColumn Header="Giai đoạn thực hiện" Binding="{Binding GiaiDoan}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>